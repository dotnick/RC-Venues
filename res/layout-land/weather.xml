<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="0.20"
    android:background="#f5f5f5"
    android:orientation="vertical" >

    <include
        android:id="@+id/include1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_weight="0.25"
        layout="@layout/colorstrip" />

    <com.google.ads.AdView
        android:id="@+id/adView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        ads:adSize="BANNER"
        ads:adUnitId="a14fbad937de76e"
        ads:loadAdOnCreate="true"
        ads:testDevices="A3A5071B0D1BB0E10A120083397BC361"
        android:gravity="center" >
    </com.google.ads.AdView>

    <TextView
        android:id="@+id/venueName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="US Eagles Venue, Colombus OH"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/lastChecked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/venueName2"
        android:layout_below="@+id/venueName2"
        android:gravity="center"
        android:text="Last checked: Sun, 03 Jun 2012"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/temp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lastChecked"
        android:layout_below="@+id/lastChecked"
        android:layout_marginTop="39dp"
        android:layout_weight="0.25"
        android:text="25Â°C"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/weatherDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/temp_tv"
        android:layout_below="@+id/lastChecked"
        android:layout_marginTop="17dp"
        android:text="Cloudy"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/btn_weather"
        android:layout_width="200dp"
        android:layout_height="201dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/venueName2"
        android:layout_marginRight="26dp"
        android:layout_weight="0.25"
        android:contentDescription="weather"
        android:src="@drawable/btn_weather" />

    <TextView
        android:id="@+id/pre_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/temp_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Precipitation"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/hum_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pre_label"
        android:layout_alignBottom="@+id/pre_label"
        android:layout_alignRight="@+id/lastChecked"
        android:layout_marginRight="45dp"
        android:text="Humidity"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/wind_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/hum_label"
        android:layout_alignBottom="@+id/hum_label"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:text="Windspeed"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/hum_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/hum_label"
        android:layout_below="@+id/hum_label"
        android:layout_marginLeft="20dp"
        android:layout_weight="0.25"
        android:text="60%"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/pre_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/hum_tv"
        android:layout_alignBottom="@+id/hum_tv"
        android:layout_centerHorizontal="true"
        android:layout_weight="0.25"
        android:text="19%"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/wind_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/hum_tv"
        android:layout_alignBottom="@+id/hum_tv"
        android:layout_alignLeft="@+id/weatherDescription"
        android:layout_weight="0.25"
        android:layout_marginLeft="4dp"
        android:text="25MPH NW"
        android:textSize="11dp" />

</RelativeLayout>