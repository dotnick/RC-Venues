<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="0.20"
    android:background="#f5f5f5"
    android:orientation="vertical" >

    <include
        android:id="@+id/include1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_weight="0.25"
        layout="@layout/colorstrip" />

    <com.google.ads.AdView
        android:id="@+id/adView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        ads:adSize="IAB_LEADERBOARD"
        ads:adUnitId="a14fbad937de76e"
        ads:loadAdOnCreate="true"
        ads:testDevices="A3A5071B0D1BB0E40A120083397BC361"
        android:gravity="center" >
    </com.google.ads.AdView>

    <TextView
        android:id="@+id/venueName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/include1"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="US Eagles Venue, Colombus OH"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/lastChecked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/venueName2"
        android:layout_below="@+id/venueName2"
        android:gravity="center"
        android:text="Last checked: Sun, 03 Jun 2012"
        android:textSize="40dp" />

    <ImageView
        android:id="@+id/btn_weather"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/venueName2"
        android:layout_marginRight="80dp"
        android:layout_marginTop="21dp"
        android:layout_weight="0.25"
        android:contentDescription="weather"
        android:src="@drawable/btn_weather" />

    <TextView
        android:id="@+id/weatherDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lastChecked"
        android:layout_alignLeft="@+id/lastChecked"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="125dp"
        android:text="Cloudy"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/temp_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/weatherDescription"
        android:layout_below="@+id/weatherDescription"
        android:layout_marginTop="36dp"
        android:text="Temperature"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/temp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/temp_label"
        android:layout_below="@+id/temp_label"
        android:layout_marginRight="90dp"
        android:layout_weight="0.25"
        android:text="25C"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/wind_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/temp_tv"
        android:layout_alignRight="@+id/lastChecked"
        android:layout_marginRight="45dp"
        android:text="Windspeed"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/wind_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/wind_label"
        android:layout_below="@+id/wind_label"
        android:layout_marginLeft="22dp"
        android:layout_weight="0.25"
        android:text="25MPH NW"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/hum_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/wind_label"
        android:layout_alignBottom="@+id/wind_label"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@+id/btn_weather"
        android:text="Humidity"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/hum_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/wind_tv"
        android:layout_alignBottom="@+id/wind_tv"
        android:layout_alignRight="@+id/hum_label"
        android:layout_marginRight="51dp"
        android:layout_weight="0.25"
        android:text="60%"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/pre_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/hum_label"
        android:layout_alignBottom="@+id/hum_label"
        android:layout_alignRight="@+id/btn_weather"
        android:layout_marginRight="52dp"
        android:text="Precipitation"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/pre_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/pre_label"
        android:layout_below="@+id/pre_label"
        android:layout_marginRight="79dp"
        android:layout_weight="0.25"
        android:text="19%"
        android:textSize="30dp" />

</RelativeLayout>